<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang='ru' xml:lang='ru' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <%= render 'layouts/head' %>
  </head>
<% unless params[:controller] == 'pages' %>
  <body class="book">
    <div id="container">
        <%= render 'layouts/header' %>
        <div id="content">
            <%= render 'layouts/sidebar' %>
            <div id="main" class="withsidebar">
                <div id="book_menu"><a href="#main_content">пропустить содержание</a></div><!-- <div id="book_menu"> -->
                <%= yield %>
                <div id="container-bottom"></div>
            </div><!-- <div id="main" class="withsidebar"> -->
            <%= render 'layouts/vendor_parts/reformal' %>

            <!--orphus-->
            <div class="orphus center">
              <script type="text/javascript" src="/javascripts/orphus.js"></script>
            </div><!-- <div class="orphus center"> -->

            <!--metrika-->
            <%= render 'layouts/vendor_parts/yandex_metrika' %>
  </body>
<% else %>
  <%= yield %>
<% end %>
</html>

